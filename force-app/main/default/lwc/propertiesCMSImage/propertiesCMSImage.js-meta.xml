<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="name" type="String" label="Name" default="Developer" />   
            <property name="cmsImage" type="ContentReference" label="Image" filter="cms_image" />
            <property name="showHiddenMessage" type="Boolean" label="Show hidden message?" default="false"/>
            <property name="hiddenMessageSize" type="String" label="Hidden message size" datasource="normal,small,large" default="normal" />
            <property name="hiddenMessageColor" type="String" label="Hidden message color" datasource="red,green,blue,black" default="black" />
        </targetConfig>    
    </targetConfigs>    
</LightningComponentBundle>